= content_for :course do
  .container

    .row
      .col-md-12.course-head
        %h1= link_to @course.title, courses_app.course_path(@course.id), class: 'course-title'

        By
        - @course.mentors.each do |mentor|
          %span.mentor-link
          = link_to mentor.name, mentors_app.mentor_path(mentor)

    .row
      .col-md-3
        .list-group-item= link_to 'Main', courses_app.course_path(@course.id)
        = render @course.menus

        = link_to 'Customize', courses_app.menu_course_menus_path(@course.id) if policy(@course.course).update?
      .col-md-9
        = yield


= render template: 'layouts/application'
