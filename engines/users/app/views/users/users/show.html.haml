- present(@user, Users::UserPresenter) do |user_presenter|

  .container
    .row
      .col-md-12
        %h1= user_presenter.name

        .badges
          = user_presenter.mentor_badge

        .mt10
          %ul.list-unstyled
            %li= "Joined on #{ user_presenter.joined_date }"
            %li= user_presenter.enrollment_count
            %li= user_presenter.mentorship_count

    .row
      - if @user.is_a_mentor?
        .col-md-6
          %h3 Courses mentoring
          = render partial: 'users/users/course', collection: user_presenter.mentoring_courses

      .col-md-6
        %h3 Courses enrolled
        = render partial: 'users/users/course', collection: user_presenter.enrolled_courses
