%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'LifeKlass', main_app.root_path, class: 'navbar-brand'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Courses", courses_app.courses_path
        %li
          = link_to "About", main_app.about_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to 'Profile', main_app.user_path(current_user)
          %li
            = link_to 'Logout', main_app.destroy_user_session_path
        - else
          %li
            = link_to 'Login', main_app.new_user_session_path
